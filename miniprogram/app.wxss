/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 页面容器 - 适配iOS状态栏和安全区域 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 内容容器 - 添加状态栏高度 */
.content-container {
  padding-top: 88rpx; /* 状态栏高度 + 额外间距 */
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-bottom: 32rpx;
}

/* 兼容不同设备的状态栏高度 */
.status-bar-height {
  height: 44px; /* iOS状态栏标准高度 */
  height: env(safe-area-inset-top);
}

.container {
  padding: 0 32rpx;
  background-color: #f5f5f5;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

/* 通用按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.2s;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-primary:active {
  background: #06ad56;
}

.btn-secondary {
  background: #f2f2f2;
  color: #333;
}

.btn-secondary:active {
  background: #e6e6e6;
}

/* 文字样式 */
.text-primary { color: #07c160; }
.text-secondary { color: #576b95; }
.text-gray { color: #888; }
.text-light { color: #999; }

.text-sm { font-size: 24rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }

/* 布局工具类 */
.flex { display: flex; }
.flex-column { flex-direction: column; }
.flex-center { align-items: center; justify-content: center; }
.flex-between { justify-content: space-between; }
.flex-1 { flex: 1; }

/* 间距工具类 */
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mb-32 { margin-bottom: 32rpx; }
.p-24 { padding: 24rpx; }
.p-32 { padding: 32rpx; }
.px-24 { padding-left: 24rpx; padding-right: 24rpx; }
.py-16 { padding-top: 16rpx; padding-bottom: 16rpx; }

/* 安全区域 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}