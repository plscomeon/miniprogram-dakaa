/* 上传组件样式 */
.upload-container {
  width: 100%;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 200rpx;
  border: 2rpx dashed #D1D5DB;
  border-radius: 12rpx;
  background: #F9FAFB;
  color: #6B7280;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #3B82F6;
  background: #F0F9FF;
}

.upload-area.uploading {
  border-color: #3B82F6;
  background: #F0F9FF;
  pointer-events: none;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #9CA3AF;
  text-align: center;
  line-height: 1.4;
}

.file-preview {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  background: #F3F4F6;
}

.preview-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.preview-video {
  width: 100%;
  height: 200rpx;
}

.file-info {
  display: flex;
  align-items: center;
  padding: 32rpx;
  gap: 16rpx;
}

.file-icon {
  font-size: 48rpx;
}

.file-name {
  flex: 1;
  font-size: 28rpx;
  color: #1F2937;
  word-break: break-all;
}

.delete-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 24rpx;
  border: none;
}

.delete-btn:active {
  background: rgba(0, 0, 0, 0.8);
}

.upload-progress {
  margin-top: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3B82F6 0%, #1D4ED8 100%);
  transition: width 0.3s ease;
}

.progress-text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #6B7280;
  margin-top: 8rpx;
}