/* pages/history/history.wxss */

/* 统计概览 */
.stats-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #888;
}

/* 日历视图 */
.calendar-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.nav-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f5f5f5;
  border: none;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-btn:active {
  background: #e0e0e0;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.calendar-weekdays {
  display: flex;
  margin-bottom: 16rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #888;
  padding: 16rpx 0;
}

.calendar-days {
  display: flex;
  flex-wrap: wrap;
}

.calendar-day {
  width: calc(100% / 7);
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.calendar-day.today {
  background: #e8f5e8;
}

.calendar-day.has-record {
  background: #07c160;
  color: #fff;
}

.calendar-day.other-month {
  opacity: 0.3;
}

.day-number {
  font-size: 28rpx;
}

.day-dot {
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  bottom: 8rpx;
}

/* 记录列表 */
.records-section {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-count {
  font-size: 24rpx;
  color: #888;
}

.records-list {
  padding: 0 32rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  margin-right: 24rpx;
}

.date-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.day-text {
  font-size: 20rpx;
  color: #888;
  margin-top: 4rpx;
}

.record-content {
  flex: 1;
}

.record-modules {
  display: flex;
  margin-bottom: 8rpx;
}

.module-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 8rpx;
}

.module-tag.completed {
  background: #e8f5e8;
  color: #07c160;
}

.record-summary {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.record-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 16rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #888;
}