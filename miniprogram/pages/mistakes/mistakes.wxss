/* pages/mistakes/mistakes.wxss */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f4f4f4;
}

.scroll-container {
  flex-grow: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.input-card {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.input-area {
  width: 100%;
  height: 200rpx;
  padding: 10rpx;
  border: 1px solid #ddd;
  border-radius: 5rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.4;
}

.character-count {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.count-text {
  font-size: 24rpx;
  color: #999;
}

.count-text.over-limit {
  color: #ff4757;
}

.input-tips {
  margin-top: 10rpx;
  padding: 10rpx;
  background-color: #f8f9fa;
  border-radius: 5rpx;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.tip-text:last-child {
  margin-bottom: 0;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.save-button,
.cancel-button {
  margin-left: 20rpx;
}

.mistake-list {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
}

.mistake-item {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mistake-text {
  flex-grow: 1;
}

.mistake-date {
  color: #999;
  font-size: 24rpx;
}

.add-button-container {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
}

.add-button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #007aff;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  line-height: 100rpx;
}