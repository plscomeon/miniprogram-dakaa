/* pages/checkin/checkin.wxss */

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.date-info {
  display: flex;
  flex-direction: column;
}

.date {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.day {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

.streak-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.streak-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
}

.streak-text {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

/* 打卡模块 */
.checkin-modules {
  margin-bottom: 32rpx;
}

.module-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.module-card.completed {
  border-left: 8rpx solid #07c160;
}

.module-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.module-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.module-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.module-status {
  font-size: 24rpx;
}

.status-completed {
  color: #07c160;
}

.status-pending {
  color: #888;
}

.module-content {
  padding: 24rpx;
}

.module-result {
  padding: 24rpx;
  background: #f8f8f8;
}

.input-area {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
  background: #fafafa;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #888;
}

.result-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.result-video {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
}

/* 完成总结 */
.summary-card {
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: #fff;
  padding: 48rpx 32rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(7,193,96,0.3);
}

.summary-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.summary-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.summary-text {
  font-size: 28rpx;
  opacity: 0.9;
}