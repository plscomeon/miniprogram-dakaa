/* pages/checkin/checkin.wxss */

/* ==================== 全局样式 ==================== */
.page-container {
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafb 0%, #ffffff 100%);
}

.content-container {
  padding-top: 140rpx;
  padding-bottom: 40rpx;
}

/* ==================== 固定顶部登录栏 ==================== */
.header-bar {
  position: fixed;
  top: env(safe-area-inset-top);
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  backdrop-filter: blur(20rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  z-index: 1000;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.15);
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.user-section:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.2);
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.user-name {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
}

/* 登录区域 */
.login-section {
  display: flex;
  align-items: center;
}

.login-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #07c160;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.login-btn:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.login-btn::after {
  border: none;
}

/* 日期区域 */
.date-section {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  font-weight: 500;
}

/* ==================== 登录弹窗 ==================== */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: #ffffff;
  border-radius: 24rpx;
  width: 600rpx;
  max-width: 90vw;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { 
    transform: translateY(100rpx);
    opacity: 0;
  }
  to { 
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999999;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: #f0f0f0;
  color: #666666;
}

.modal-body {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.avatar-selector {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  background: none;
  border: none;
  padding: 0;
}

.avatar-selector::after {
  border: none;
}

.temp-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #07c160;
  transition: all 0.3s ease;
}

.avatar-selector:active .temp-avatar {
  transform: scale(0.95);
  border-color: #06ad56;
}

.avatar-tip {
  color: #666666;
  font-size: 28rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333333;
  background: #fafafa;
  transition: all 0.3s ease;
}

.nickname-input:focus {
  border-color: #07c160;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

.confirm-login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.confirm-login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
}

.confirm-login-btn::after {
  border: none;
}

/* ==================== 用户菜单 ==================== */
.user-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1500;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  padding-top: calc(env(safe-area-inset-top) + 140rpx);
  padding-right: 40rpx;
}

.menu-content {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
  min-width: 240rpx;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.menu-item {
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 500;
  transition: background 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(7, 193, 96, 0.08);
}

/* ==================== 打卡模块 ==================== */
.checkin-modules {
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.module-card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  transition: all 0.3s ease;
}

.module-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
}

.module-header {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #f8fafb 0%, #ffffff 100%);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  gap: 20rpx;
}

.module-icon {
  font-size: 44rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.module-title {
  font-size: 34rpx;
  color: #1a1a1a;
  font-weight: 700;
  letter-spacing: 0.5rpx;
}

.module-content {
  padding: 40rpx;
}

/* ==================== 问题模块 ==================== */
.questions-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.question-item {
  position: relative;
}

.question-input {
  width: 100%;
  min-height: 140rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #1a1a1a;
  background: #fafafa;
  line-height: 1.6;
  transition: all 0.3s ease;
}

.question-input:focus {
  border-color: #07c160;
  background: #ffffff;
  box-shadow: 0 0 0 6rpx rgba(7, 193, 96, 0.1);
}

.question-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.btn-delete {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.btn-delete:active {
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.4);
}

.btn-delete::after {
  border: none;
}

/* ==================== 通用按钮 ==================== */
.module-actions {
  display: flex;
  justify-content: center;
}

.btn {
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding: 20rpx 40rpx;
  border: none;
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
}

.btn::after {
  border: none;
}

.btn-secondary {
  background: linear-gradient(135deg, #f8fafb 0%, #e9ecef 100%);
  color: #495057;
  border: 2rpx solid #e9ecef;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.btn-secondary:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: translateY(1rpx);
}

/* ==================== 视频上传 ==================== */
.video-upload {
  width: 100%;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 320rpx;
  border: 3rpx dashed #d1d5db;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #f8fafb 0%, #ffffff 100%);
  transition: all 0.3s ease;
}

.upload-area:active {
  background: linear-gradient(135deg, #e9ecef 0%, #f8fafb 100%);
  border-color: #07c160;
  transform: scale(0.98);
}

.upload-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.upload-text {
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.upload-hint {
  font-size: 26rpx;
  color: #6c757d;
}

.video-preview {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.preview-video {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* ==================== 学习日记 ==================== */
.diary-input {
  width: 100%;
  min-height: 240rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #1a1a1a;
  background: #fafafa;
  line-height: 1.6;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.diary-input:focus {
  border-color: #07c160;
  background: #ffffff;
  box-shadow: 0 0 0 6rpx rgba(7, 193, 96, 0.1);
}

.char-count {
  text-align: right;
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 32rpx;
  font-weight: 500;
}

/* ==================== 图片网格 ==================== */
.images-section {
  margin-top: 32rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.diary-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.image-item:active .diary-image {
  transform: scale(1.05);
}

.image-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #ffffff;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
}

.image-delete:active {
  transform: scale(0.9);
}

.image-add {
  aspect-ratio: 1;
  border: 3rpx dashed #d1d5db;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f8fafb 0%, #ffffff 100%);
  transition: all 0.3s ease;
}

.image-add:active {
  background: linear-gradient(135deg, #e9ecef 0%, #f8fafb 100%);
  border-color: #07c160;
  transform: scale(0.95);
}

.add-icon {
  font-size: 44rpx;
  color: #6c757d;
  margin-bottom: 12rpx;
  font-weight: 300;
}

.add-text {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

/* ==================== 提交按钮 ==================== */
.submit-section {
  padding: 40rpx;
  margin-top: 40rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #ffffff;
  box-shadow: 0 12rpx 32rpx rgba(7, 193, 96, 0.3);
}

.btn-submit {
  width: 100%;
  height: 96rpx;
  font-size: 34rpx;
  font-weight: 700;
  border-radius: 20rpx;
  letter-spacing: 1rpx;
  transition: all 0.3s ease;
}

.btn-submit:disabled {
  background: linear-gradient(135deg, #d1d5db 0%, #9ca3af 100%);
  color: #ffffff;
  box-shadow: none;
}

.btn-submit:active:not(:disabled) {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.4);
}

/* ==================== 成功提示 ==================== */
.success-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 3000;
  animation: toastIn 0.3s ease;
}

@keyframes toastIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.toast-content {
  background: rgba(26, 26, 26, 0.9);
  backdrop-filter: blur(20rpx);
  color: #ffffff;
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.toast-icon {
  font-size: 36rpx;
}

.toast-text {
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}