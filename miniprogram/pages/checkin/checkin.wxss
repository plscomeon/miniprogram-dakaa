/* pages/checkin/checkin.wxss */

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid #f0f0f0;
}

.username {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 登录按钮样式 */
.avatar-button {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  margin-right: 16rpx;
}

.avatar-button::after {
  border: none;
}

.login-button {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  font-size: 28rpx;
  color: #07c160;
  text-align: left;
}

.login-button::after {
  border: none;
}

/* 用户菜单 */
.user-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  padding-top: 200rpx;
  padding-left: 32rpx;
}

.menu-content {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2);
  min-width: 200rpx;
}

.menu-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f8f8;
}

.date-info {
  display: flex;
  flex-direction: column;
}

.date {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.day {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

.streak-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.streak-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
}

.streak-text {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

/* 打卡模块 */
.checkin-modules {
  margin-bottom: 32rpx;
}

.module-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.module-card.completed {
  border-left: 8rpx solid #07c160;
}

.module-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.module-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.module-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.module-status {
  font-size: 24rpx;
}

.status-completed {
  color: #07c160;
}

.status-pending {
  color: #888;
}

.module-content {
  padding: 24rpx;
}

/* 预习提问样式 */
.questions-list {
  margin-bottom: 24rpx;
}

.question-item {
  margin-bottom: 16rpx;
  position: relative;
}

.question-input {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
  box-sizing: border-box;
  resize: none;
}

.question-input:focus {
  border-color: #07c160;
}

.question-actions {
  margin-top: 8rpx;
  text-align: right;
}

.btn-delete {
  background: #ff4757;
  color: #fff;
  border: none;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.module-actions {
  text-align: center;
}

/* 视频上传样式 */
.video-upload {
  margin-bottom: 24rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.video-preview {
  position: relative;
}

.preview-video {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.upload-progress {
  margin-top: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #07c160;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  text-align: center;
}

/* 学习日记样式 */
.diary-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 16rpx;
  box-sizing: border-box;
  resize: none;
}

.diary-input:focus {
  border-color: #07c160;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.images-section {
  margin-top: 24rpx;
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.diary-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.image-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff4757;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.image-add {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* 提交按钮样式 */
.submit-section {
  padding: 32rpx 0;
}

.btn {
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 24rpx 32rpx;
  text-align: center;
  cursor: pointer;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-primary:disabled {
  background: #ccc;
  color: #999;
}

.btn-secondary {
  background: #f8f8f8;
  color: #333;
  border: 1rpx solid #e0e0e0;
}

.btn-submit {
  width: 100%;
  font-weight: bold;
}

/* 成功提示 */
.success-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2000;
}

.toast-content {
  background: rgba(0,0,0,0.8);
  color: #fff;
  padding: 32rpx 48rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.toast-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.toast-text {
  font-size: 28rpx;
}

.module-result {
  padding: 24rpx;
  background: #f8f8f8;
}

.input-area {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
  background: #fafafa;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #888;
}

.result-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.result-video {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
}

/* 完成总结 */
.summary-card {
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: #fff;
  padding: 48rpx 32rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(7,193,96,0.3);
}

.summary-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.summary-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.summary-text {
  font-size: 28rpx;
  opacity: 0.9;
}