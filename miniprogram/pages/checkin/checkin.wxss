/* pages/checkin/checkin.wxss */

/* ==================== 全局样式 ==================== */
.page-container {
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #ffffff 50%, #f1f5f9 100%);
}

.content-container {
  padding-top: 140rpx; /* 调整为单行header高度 */
  padding-bottom: 40rpx;
}

/* ==================== 固定顶部区域 ==================== */
.header-container {
  position: fixed;
  top: calc(env(safe-area-inset-top) + 16rpx);
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  z-index: 1000;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.08);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  padding: 0 32rpx;
}

/* 第一行：用户信息和日期 */
.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding: 16rpx 0;
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 8rpx 20rpx;
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(7, 193, 96, 0.1);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.user-section:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  border: 2rpx solid #07c160;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 0;
  flex-shrink: 1;
}

.user-name {
  color: #1e293b;
  font-size: 30rpx;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-shrink: 1;
}

.motivation-text {
  color: #059669;
  font-size: 24rpx;
  font-weight: 500;
  background: rgba(7, 193, 96, 0.08);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(7, 193, 96, 0.15);
  white-space: nowrap;
  flex-shrink: 0;
}

/* 登录区域 */
.login-section {
  display: flex;
  align-items: center;
}

.login-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.4);
}

.login-btn::after {
  border: none;
}

/* 日期区域 */
.date-section {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.date-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 2rpx;
}

.current-date {
  color: #1e293b;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 0.5rpx;
}

.date-label {
  color: #64748b;
  font-size: 22rpx;
  font-weight: 500;
  opacity: 0.8;
}


/* ==================== 登录弹窗 ==================== */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: #ffffff;
  border-radius: 24rpx;
  width: 560rpx;
  max-width: 85vw;
  overflow: hidden;
  animation: slideUp 0.3s ease;
  margin: 0 auto;
}

@keyframes slideUp {
  from { 
    transform: translateY(100rpx);
    opacity: 0;
  }
  to { 
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999999;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: #f0f0f0;
  color: #666666;
}

.modal-body {
  padding: 48rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 36rpx;
}

.login-description {
  text-align: center;
  margin-bottom: 8rpx;
}

.description-text {
  color: #666666;
  font-size: 28rpx;
  line-height: 1.6;
  max-width: 400rpx;
}

.one-click-login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #ffffff;
  border: none;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.one-click-login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
}

.one-click-login-btn::after {
  border: none;
}

.login-btn-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.wechat-icon {
  font-size: 36rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.login-btn-text {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.privacy-notice {
  text-align: center;
  margin-top: 8rpx;
}

.notice-text {
  color: #999999;
  font-size: 24rpx;
  line-height: 1.4;
  max-width: 360rpx;
}


/* ==================== 用户菜单 ==================== */
.user-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1500;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  padding-top: calc(env(safe-area-inset-top) + 140rpx);
  padding-left: 32rpx;
}

.menu-content {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
  min-width: 240rpx;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.menu-item {
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 500;
  transition: background 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(7, 193, 96, 0.08);
}

/* ==================== 打卡模块 ==================== */
.checkin-modules {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.module-card {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
  border: 1rpx solid rgba(0, 0, 0, 0.03);
  transition: all 0.2s ease;
}

.module-header {
  display: flex;
  align-items: center;
  padding: 32rpx 32rpx 24rpx 32rpx;
  background: #ffffff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.module-title {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.module-content {
  padding: 32rpx;
}

/* ==================== 问题模块 ==================== */
.questions-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.question-item {
  position: relative;
}

.question-input {
  width: 100%;
  min-height: 140rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #1a1a1a;
  background: #f8fafc;
  line-height: 1.6;
  transition: all 0.3s ease;
}

.question-input:focus {
  border-color: #07c160;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.08);
}

.question-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.btn-delete {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.btn-delete:active {
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.4);
}

.btn-delete::after {
  border: none;
}

/* ==================== 通用按钮 ==================== */
.module-actions {
  display: flex;
  justify-content: center;
}

.btn {
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding: 20rpx 40rpx;
  border: none;
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
}

.btn::after {
  border: none;
}

.btn-secondary {
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  color: #475569;
  border: 1rpx solid #e2e8f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.btn-secondary:active {
  background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
  transform: translateY(1rpx);
}

/* ==================== 错题图片上传 ==================== */
.mistake-images-section {
  margin-top: 20rpx;
}

.mistake-images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.mistake-image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.mistake-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.mistake-image-item:active .mistake-image {
  transform: scale(1.05);
}

.mistake-image-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #ffffff;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
}

.mistake-image-delete:active {
  transform: scale(0.9);
}

.mistake-image-add {
  aspect-ratio: 1;
  border: 2rpx dashed #cbd5e1;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  transition: all 0.3s ease;
}

.mistake-image-add:active {
  background: linear-gradient(135deg, #f1f5f9 0%, #f8fafc 100%);
  border-color: #3b82f6;
  transform: scale(0.95);
}

.mistake-hint {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #3b82f6;
}

.hint-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* ==================== 学习日记 ==================== */
.diary-input {
  width: 100%;
  min-height: 240rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #1a1a1a;
  background: #f8fafc;
  line-height: 1.6;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.diary-input:focus {
  border-color: #07c160;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.08);
}

.char-count {
  text-align: right;
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 32rpx;
  font-weight: 500;
}

/* ==================== 图片网格 ==================== */
.images-section {
  margin-top: 32rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.diary-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.image-item:active .diary-image {
  transform: scale(1.05);
}

.image-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #ffffff;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
}

.image-delete:active {
  transform: scale(0.9);
}

.image-add {
  aspect-ratio: 1;
  border: 2rpx dashed #cbd5e1;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  transition: all 0.3s ease;
}

.image-add:active {
  background: linear-gradient(135deg, #f1f5f9 0%, #f8fafc 100%);
  border-color: #07c160;
  transform: scale(0.95);
}

.add-icon {
  font-size: 44rpx;
  color: #6c757d;
  margin-bottom: 12rpx;
  font-weight: 300;
}

.add-text {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

/* ==================== 提交按钮 ==================== */
.submit-section {
  padding: 40rpx;
  margin-top: 40rpx;
}

.btn-primary {
  background: #07c160;
  color: #ffffff;
  border: none;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.btn-submit:disabled {
  background: #d1d5db;
  color: #ffffff;
}

.btn-submit:active:not(:disabled) {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.4);
}

/* ==================== 成功提示 ==================== */
.success-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 3000;
  animation: toastIn 0.3s ease;
}

@keyframes toastIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.toast-content {
  background: rgba(26, 26, 26, 0.9);
  backdrop-filter: blur(20rpx);
  color: #ffffff;
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.toast-icon {
  font-size: 36rpx;
}

.toast-text {
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}