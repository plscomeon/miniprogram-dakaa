/* pages/profile/profile.wxss */

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.user-avatar {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 32rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 32rpx;
  height: 32rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
  border: 2rpx solid #fff;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #888;
}

/* 数据统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stats-item {
  background: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.stats-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #888;
}

/* 成就系统 */
.achievement-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.achievement-count {
  font-size: 24rpx;
  color: #888;
}

.achievement-list {
  padding: 0 32rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.achievement-item:last-child {
  border-bottom: none;
}

.achievement-item.locked {
  opacity: 0.5;
}

.achievement-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.achievement-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.achievement-desc {
  font-size: 24rpx;
  color: #888;
}

.achievement-status {
  font-size: 24rpx;
}

.status-unlocked {
  color: #07c160;
}

.status-locked {
  color: #888;
}

/* 功能菜单 */
.menu-section {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f8f8;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 设置选项 */
.settings-section {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-title {
  font-size: 28rpx;
  color: #333;
}

.settings-value {
  font-size: 24rpx;
  color: #888;
}

.settings-switch {
  transform: scale(0.8);
}

/* 导出数据弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 1000;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f5f5f5;
  border: none;
  font-size: 32rpx;
  color: #888;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 32rpx;
}

.export-options {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.export-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.export-option.selected {
  border-color: #07c160;
  background: #f0f9f0;
}

.option-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.option-title {
  font-size: 28rpx;
  color: #333;
}

.date-range {
  margin-bottom: 32rpx;
}

.range-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.date-options {
  display: flex;
  gap: 16rpx;
}

.date-option {
  flex: 1;
  padding: 16rpx;
  text-align: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333;
  transition: all 0.2s;
}

.date-option.active {
  background: #07c160;
  border-color: #07c160;
  color: #fff;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer .btn {
  flex: 1;
}

/* ========== 奖励系统样式 ========== */

/* 奖励系统卡片 */
.reward-system-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  color: #fff;
}

.reward-system-card .card-header {
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.reward-system-card .card-title {
  color: #fff;
  font-size: 36rpx;
}

.phone-status {
  font-size: 24rpx;
  font-weight: bold;
}

/* 手机使用权状态 */
.phone-usage-status {
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.usage-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.usage-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.usage-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.usage-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.usage-value.recovery {
  color: #ff6b6b;
}

.usage-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  color: #fff;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
}

.usage-btn:disabled {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.5);
}

/* 奖励规则 */
.reward-rules {
  padding: 0 32rpx 24rpx;
}

.rules-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  display: block;
}

.rule-item {
  margin-bottom: 12rpx;
}

.rule-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* 最近活动 */
.recent-activities {
  padding: 0 32rpx 32rpx;
}

.activity-section {
  margin-bottom: 24rpx;
}

.activity-section:last-child {
  margin-bottom: 0;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.activity-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
}

.activity-more {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.activity-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  backdrop-filter: blur(10rpx);
}

.activity-item:last-child {
  margin-bottom: 0;
}

.activity-item.penalty {
  background: rgba(255, 107, 107, 0.2);
}

.activity-message {
  font-size: 24rpx;
  color: #fff;
  line-height: 1.4;
  display: block;
  margin-bottom: 8rpx;
}

.activity-date {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 成就系统优化 */
.achievement-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.achievement-item:last-child {
  border-bottom: none;
}

.achievement-item.locked {
  opacity: 0.5;
}

.achievement-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.achievement-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.achievement-details {
  display: flex;
  flex-direction: column;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.achievement-desc {
  font-size: 24rpx;
  color: #888;
}

.achievement-status {
  font-size: 24rpx;
}

.status-unlocked {
  color: #07c160;
  font-weight: bold;
}

.status-locked {
  color: #888;
}

/* 手机使用权管理弹窗 */
.status-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.status-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.status-info {
  flex: 1;
}

.status-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.status-subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.status-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
}

.time-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.time-value {
  font-size: 36rpx;
  font-weight: bold;
}

.quick-usage {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.usage-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.usage-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.usage-btn.small {
  min-height: 120rpx;
}

.usage-btn.large {
  min-height: 140rpx;
}

.usage-btn:disabled {
  background: #e0e0e0;
  color: #999;
}

.usage-btn:not(:disabled):active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(79, 172, 254, 0.4);
}

.btn-time {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.btn-desc {
  font-size: 22rpx;
  opacity: 0.9;
}

.recovery-notice {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
  display: flex;
  align-items: center;
}

.notice-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.notice-content {
  flex: 1;
}

.notice-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.notice-desc {
  display: block;
  font-size: 26rpx;
  margin-bottom: 8rpx;
  opacity: 0.9;
}

.notice-tip {
  display: block;
  font-size: 22rpx;
  opacity: 0.8;
}

.usage-stats {
  margin-bottom: 32rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.stat-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  border: 2rpx solid #e9ecef;
}

.stat-value {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #666;
}

.usage-tips {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 4rpx solid #4facfe;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 历史记录弹窗 */
.history-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.history-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.history-item.penalty {
  background: #fff5f5;
  border-left: 4rpx solid #ff6b6b;
}

.history-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.history-message {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.history-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.history-date {
  font-size: 20rpx;
  color: #999;
}

.history-reward {
  font-size: 24rpx;
  color: #07c160;
  font-weight: bold;
}

.history-penalty {
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 重新计算按钮 */
.recalculate-btn {
  margin-top: 24rpx;
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.recalculate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.recalculate-btn .btn-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .usage-info {
    gap: 12rpx;
  }
  
  .usage-value {
    font-size: 28rpx;
  }
  
  .option-buttons {
    grid-template-columns: 1fr;
  }
}